<h2>Search</h2>
<%== partial :search_form, locals: { query: "", mode: "tag" } %>
<h2>Recent <%= recent_images.size %> images</h2>
<div id="recent-images">
  <% recent_images.each do |image| %>
    <div class="image-box">
      <a href="/images/detail/<%= image["filename"] %>">
      <img src="/images/<%= image["filename"] %>?thumbnail=1">
      </a>
    </div>
  <% end %>
</div>
<div>
  <a href="/images/all?page=1">&gt;&gt; browse all images</a>
  <a href="/tags">All tags</a>
</div>
